# Eaiser Backend Environment Variables
# Copy this file to .env and fill in your actual values

# AI API Keys
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password-here

# Environment
ENV=development

# MongoDB Configuration - Local Development
MONGO_URI=mongodb://localhost:27017/snapfix
MONGODB_NAME=snapfix
MONGODB_URL=mongodb://localhost:27017/snapfix

# Production MongoDB (uncomment for deployment)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp&tls=true
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp&tls=true

# Redis Configuration - Local Development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0
REDIS_SSL=false